{
    "compiler": "clang++",
    "optimization_level": "-O3",
    "cplus_version": "-std=c++20",
    "warnings": "-Wall -Wextra -Wpedantic",
    "include_flag": "-I./include -I./external/include",
    "output_flag": "-o output",
    "debug_info": "-g",
    "sanitizers": "-fsanitize=address,undefined",
    "extra_flags": [
        "-fno-exceptions",
        "-fno-rtti",
        "-march=native"
    ],
    "defines": [
        "-DNDEBUG",
        "-DUSE_OPENMP"
    ],
    "libraries": [
        "-lpthread",
        "-lm",
        "-lrt"
    ]
}