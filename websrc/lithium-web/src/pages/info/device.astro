    <title>Telescope Catalog</title>
    <link rel="stylesheet" href="/css/adminlte.min.css" />
    <link rel="stylesheet" href="/css/fontawesome/fontawesome.min.css" />
    <link rel="stylesheet" href="/css/bootstrap/bootstrap-select.min.css" />
    <link rel="icon" sizes="16x16" type="image/icon" href="/textures/icon.ico" />
    <style>
      .telescope-card {
        border-radius: 10px;
        padding: 10px;
        margin-bottom: 20px;
        position: relative;
      }
      .telescope-make {
        color: #007bff;
        font-weight: bold;
      }
      .telescope-model {
        color: #28a745;
      }
      .telescope-actions {
        position: absolute;
        top: 10px;
        right: 10px;
      }
      .telescope-actions button {
        margin-left: 5px;
      }

      #editModal input {
        margin-bottom: 10px;
      }
    </style>
  </head>
  <body class="dark-mode">
    <div class="container mt-5">
      <h1 class="mb-4">
        <i class="fas fa-binoculars"></i> Telescope Catalog <i
          class="fas fa-binoculars"></i>
      </h1>

      <div class="row mb-4">
        <div class="col-md-2 text-center">
          <button
            id="refreshBtn"
            class="btn btn-success btn-animate animate__animated animate__bounce"
            >Refresh Data</button
          >
        </div>
        <div class="col-md-5 input-group">
          <span class="input-group-text">Search:</span>
          <input type="text" id="searchInput" class="form-control" />
        </div>
        <div class="col-md-5">
          <label for="sortSelect" class="form-label">Sort By:</label>
          <select
            id="sortSelect"
            class="form-select selectpicker lg"
            data-style="btn-primary"
            data-width="fit"
          >
            <option value="make">Make</option>
            <option value="model">Model</option>
            <option value="aperture">Aperture</option>
            <option value="focalLength">Focal Length</option>
          </select>
        </div>
      </div>

      <div id="telescopesList" class="row">
        <!-- Telescopes list will be dynamically populated here -->
      </div>

      <!-- Modal for editing telescope -->
      <div
        class="modal fade"
        id="editModal"
        tabindex="-1"
        aria-labelledby="editModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="editModalLabel">Edit Telescope</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <input
                type="text"
                id="editMake"
                class="form-control mb-3"
                placeholder="Make"
              />
              <input
                type="text"
                id="editModel"
                class="form-control mb-3"
                placeholder="Model"
              />
              <input
                type="number"
                id="editAperture"
                class="form-control mb-3"
                placeholder="Aperture (mm)"
              />
              <input
                type="number"
                id="editFocalLength"
                class="form-control"
                placeholder="Focal Length (mm)"
              />
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal">Close</button
              >
              <button type="button" class="btn btn-primary" id="saveChangesBtn"
                >Save changes</button
              >
            </div>
          </div>
        </div>
      </div>
    </div>

